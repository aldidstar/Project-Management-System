<%- include('../partials/header') %>
<form action="" method="post">
  <%- include('../partials/navbar') %>
  <br />
  <h1>ADD DATA</h1>

  <div class="mb-3 row">
    <label for="Member" class="col-sm-2 col-form-label">Member</label>
    <div class="col-sm-10">
      <select
        class="form-select"
        aria-label="Default select example"
        id="Member"
        name="member"
      >
        <option selected>Open this select menu</option>
        <% users.forEach((item, index) => { %>
        <option value="<%=item.userid %>" ><%= item.firstname %></option>
        <% }) %>
      </select>
    </div>
  </div>

  
  <br />

  <div class="mb-3 row">
    <label for="Member" class="col-sm-2 col-form-label">Position</label>
    <div class="col-sm-10">
      <select
        class="form-select"
        aria-label="Default select example"
        id="Member"
        name="role"
      >
        <option selected>Open this select menu</option>

        <% members.forEach((item, index) => { %>

        <option  ><%= item.position %></option>
        <% }) %>
      </select>
    </div>
  </div>

  <br />
  <button type="submit" class="btn btn-primary">Save</button>

  <a class="btn btn-warning" href="/projects/members/<%= projectid %>">Back</a>
</form>

<%- include('../partials/footer') %>
