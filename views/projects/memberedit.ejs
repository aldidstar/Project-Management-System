<%- include('../partials/header') %>
<form action="" method="post">

  <%- include('../partials/navbar') %>
  <br>
  <h1>EDIT DATA</h1>
  <div  class="mb-3 row">
    <label for="Member" class="col-sm-2 col-form-label">Member</label>
    <div class="col-sm-10">
      <select 
        class="form-select"
        aria-label="Default select example"
        id="Member"
        name="userid"
        disabled
        
      >
        <option  selected>Open this select menu</option>
        <% members.forEach((item, index) => { %>
        <option value="<%=item.userid %>" <%= nama.userid == item.userid ? ' selected' : '' %>  ><%= item.firstname %></option>
        <% }) %>
      </select>
    </div>
  </div>
  
  
  

  <div class="mb-3 row">
    <label for="Type" class="col-sm-2 col-form-label">Type</label>
    <div class="col-sm-10">
        <select type="boolean" id="Type" name="role" >
            <option value="">Choose your choice</option>
            <option value="Manager"<%= nama.role == 'Manager' ? ' selected' : '' %>>Manager</option>
            <option value="Software Developer"<%= nama.role == 'Software Developer' ? ' selected' : '' %>>Software Developer</option>
            <option value="Quality Assurance"<%= nama.role == 'Quality Assurance' ? ' selected' : '' %>>Quality Assurance</option>
          </select>
      
    </div>
  </div>

  
<br><br>


  <button type="submit" class="btn btn-primary">Update
  </button>
 
  <a class="btn btn-warning" href="/projects/members/<%= projectid %>">Back</a>
 

</form>
  
<%- include('../partials/footer') %>
