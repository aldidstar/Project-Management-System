<%- include('../partials/header') %>

<form action="" method="GET">
  <input type="hidden" name="page" value="1" />

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Project Management System</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Projects</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="profile<%= nama.email %>">Profile</a>
          </li>
        </ul>
      </div>
      <div class="row align-items-end" style="margin-right: 10px">
        <a class="btn btn-outline-success" href="/logout">Sign out</a>
      </div>
    </div>
  </nav>

  <br />
  <h1>Projects</h1>

  <input onclick="myFunction1()" type="checkbox" id="myCheck1" />
  <div class="mb-3 row">
    <label for="ID" class="col-sm-2 col-form-label">ID</label>
    <div class="col-sm-10">
      <input
        type="number"
        value="<%= query.id %>"
        class="form-control"
        id="ID"
        name="id"
        placeholder="ID"
        disabled
      />
    </div>
  </div>

  <input onclick="myFunction2()" type="checkbox" id="myCheck2" />
  <div class="mb-3 row">
    <label for="Name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input
        type="text"
        value="<%= query.name %>"
        class="form-control"
        id="Name"
        name="name"
        placeholder="Name"
        disabled
      />
    </div>
  </div>

  <input onclick="myFunction3()" type="checkbox" id="myCheck3" />
  <div class="mb-3 row">
    <label for="Member" class="col-sm-2 col-form-label">Member</label>
    <div class="col-sm-10">
      <select
      class="form-select"
      aria-label="Default select example"
      id="Member"
      name="member"
      value="<%= query.member %>"
      disabled
      >
      <option selected>Open this select menu</option>
      <% memberss.forEach((item, index) => { %>
        <option value="<%= item.userid %>" ><%= item.firstname %></option>
        <% }) %>
      </select>
    </div>
  </div>
  <button type="submit" class="btn btn-success">Search</button>
  <a class="btn btn-warning" href="/projects">Reset</a>
</form>

<br /><br /><br /><br />
<form action="/projects" method="POST">
  <h1>Options</h1>

  <div class="mb-3 row">
    <label for="password" class="col-sm-2 col-form-label">Type</label>
    <div class="col">
      <input
        name="projectid"
        class="form-check-input"
        type="checkbox"
        id="flexCheckDefault"
        <%= options["projectid"] ? ' checked' : ''  %>
      />
      <label class="form-check-label" for="flexCheckDefault"> ID </label>
    </div>
    <div class="col">
      <input
        name="name"
        class="form-check-input"
        type="checkbox"
        id="flexCheckChecked"
        <%= options["name"] ? ' checked' : ''  %>
      />
      <label class="form-check-label" for="flexCheckChecked"> Name </label>
    </div>
    <div class="col">
      <input
        name="members"
        class="form-check-input"
        type="checkbox"
        id="flexCheckChecked"
        <%= options["members"] ? ' checked' : ''  %>
      />
      <label class="form-check-label" for="flexCheckChecked"> Member </label>
    </div>
  </div>
  <button type="submit" class="btn btn-success">Apply</button>
  
</form>
<br /><br /><br /><br />

<table class="table table-striped">
  <tr>
    <% if(options["projectid"]) { %>
    <th  id="checkid">ID</th>
    <% } %>
    <% if(options["name"]) { %>
    <th  id="checkname">Name</th>
    <% } %>
    <% if(options["members"]) { %>
    <th  id="checkname">Member</th>
    <% } %>
    <th>Action</th>
  </tr>
  <% nama.forEach((item, index) => { %>
  <tr class="genap">
    <% if(options["projectid"]) { %>
    <td id="cekid"><%= item.projectid %></td>
    <% } %>
    <% if(options["name"]) { %>
    <td  id="cekname"><%= item.name %></td>
    <% } %>
    <% if(options["members"]) { %>
    <td  id="cekname"><%= item.members %></td>
    <% } %>
    <td>
      <a class="btn btn-success" href="/edit/<%= item.projectid%>">edit</a>
      <a class="btn btn-danger" href="/delete/<%= item.projectid%>">delete</a>
    </td>
  </tr>
  <% }) %>
</table>

<a class="btn btn-primary" href="add"> Add</a>

<script>
  function myFunction1() {
    if (document.getElementById("myCheck1").checked == true) {
      document.getElementById("ID").disabled = false;
    } else {
      document.getElementById("ID").disabled = true;
    }
  }
  function myFunction2() {
    if (document.getElementById("myCheck2").checked == true) {
      document.getElementById("Name").disabled = false;
    } else {
      document.getElementById("Name").disabled = true;
    }
  }

  function myFunction3() {
    if (document.getElementById("myCheck3").checked == true) {
      document.getElementById("Member").disabled = false;
    } else {
      document.getElementById("Member").disabled = true;
    }
  }

  function myFunction4() {
    if (document.getElementById("flexCheckDefault").checked == true) {
      document.getElementById("cekid").hidden = false;
      document.getElementById("checkid").hidden = false;
    } else {
      document.getElementById("checkid").hidden = true;
      document.getElementById("cekid").hidden = true;
    }
  }

  function myFunction5() {
    if (document.getElementById("flexCheckChecked").checked == true) {
      document.getElementById("checkname").hidden = false;
      document.getElementById("cekname").hidden = false;
    } else {
      document.getElementById("checkname").hidden = true;
      document.getElementById("cekname").hidden = true;
    }
  }
</script>

<%- include('../partials/footer') %>
