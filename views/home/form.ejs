<%- include('../partials/header') %>

<form action="" method="POST">
<h1 style="font-size: 50px">Profile</h1>
  <br />
  <div class="mb-3 row">
    <label for="Email"  class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input
        type="email"
        value="<%= nama.email %>"
        class="form-control-plaintext"
        id="Email"
        name="email"
        placeholder="email"
        readonly
      />
    </div>
  </div>
 
  <div class="mb-3 row">
    <label for="password" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input
        type="password"
       
        class="form-control"
        id="password"
        name="password"
        placeholder="password"
      />
    </div>
  </div>
  
 
  <div class="mb-3 row">
    <label for="password" class="col-sm-2 col-form-label">Position</label>
  <div class="col">
    <input 
      class="form-check-input"
      type="radio"
      name="position"
      id="exampleRadios1"
      value="Manager"
      
    />
    <label class="form-check-label" for="exampleRadios1"> Manager </label>
  </div>
  <div class="col">
    <input 
      class="form-check-input"
      type="radio"
      name="position"
      id="exampleRadios2"
      value="Software Developer"
    />
    <label class="form-check-label" for="exampleRadios2">
      Software Developer
    </label>
  </div>
  <div class="col">
    <input 
      class="form-check-input"
      type="radio"
      name="position"
      id="exampleRadios3"
      value="Quality Assurance"
    />
    <label class="form-check-label" for="exampleRadios3">
      Quality Assurance
    </label>
  </div>
</div>

  <div class="mb-3 row">
    <label for="password" class="col-sm-2 col-form-label">Type</label>
  <div class="col">
    <input type="checkbox" class="form-check-input" id="exampleCheck1" name="type" value="<%= nama.type %>"/>
    <label class="form-check-label" for="exampleCheck1">Fulltime</label>
  </div>
  
</div>
  <button type="submit" class="btn btn-primary">Update</button>

  
</form>



<%- include('../partials/footer') %>
