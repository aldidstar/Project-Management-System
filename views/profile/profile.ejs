<%- include('../partials/header') %>

<form action="" method="POST">

  <%- include('../partials/navbar') %>

  <br>
  
<h1 style="font-size: 50px">Profile</h1>
<% if(info.length > 0) { %>
  <div class="alert alert-primary" role="alert">
    
    <%= info %>
  </div>
  <% } %>
  <br />
  <div class="mb-3 row">
    <label for="Email"  class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input
        type="email"
        value="<%= nama.email %>"
        class="form-control-plaintext"
        id="Email"
        name="email"
        placeholder="email"
        readonly
      />
    </div>
  </div>
 
  <div class="d-flex">
    <div style="margin-left: -10px;"  class="p-2">Password</div>
    <div style="margin-left: 120px;" class="p-2"></div>
    <div class="col">
  <a style="font-size: 12px;" class="btn btn-primary" href="/profile/password/">Change Password</a>
  
</div>
</div>
</div>

<br>
  <div class="d-flex">
    <div style="margin-left: -10px;" class="p-2">Position</div>
    <div style="margin-left: 140px;" class="p-2">
  <div class="col">
    <input 
      class="form-check-input"
      type="radio"
      name="position"
      id="exampleRadios1"
      value="Manager"<%= nama.position == 'Manager' ? ' checked' : '' %>
      
      
    />
    <label class="form-check-label" for="exampleRadios1"> Manager </label>
  </div>
  <div class="col">
    <input 
      class="form-check-input"
      type="radio"
      name="position"
      id="exampleRadios2"
      value="Software Developer"<%= nama.position == 'Software Developer' ? ' checked' : '' %>
    />
    <label class="form-check-label" for="exampleRadios2">
      Software Developer
    </label>
  </div>
  <div class="col">
    <input 
      class="form-check-input"
      type="radio"
      name="position"
      id="exampleRadios3"
      value="Quality Assurance" <%= nama.position == 'Quality Assurance' ? ' checked' : '' %>
    />
    <label class="form-check-label" for="exampleRadios3">
      Quality Assurance
    </label>
  </div>
</div>
</div>

<br>
<div class="mb-3 row">
  <label for="Type" class="col-sm-2 col-form-label">Type</label>
  <div class="col-sm-10">
      <select type="boolean" id="Type" name="type" >
          <option value="">Choose your choice</option>
          <option value="full time"<%= nama.type == 'full time' ? ' selected' : '' %>>full time</option>
          <option value="part time"<%= nama.type == 'part time' ? ' selected' : '' %>>part time</option>
        </select>
    
  </div>
</div>
  <button type="submit" class="btn btn-primary">Update</button>
  <a class="btn btn-warning" href="/projects">Back</a>

  
</form>



<%- include('../partials/footer') %>
