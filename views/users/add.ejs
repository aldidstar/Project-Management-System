<%- include('../partials/header') %>
<form action="" method="post">

  <%- include('../partials/navbar') %>
  <br>
  <h1>ADD DATA</h1>

 

  <div class="mb-3 row">
    <label for="Name" class="col-sm-2 col-form-label">Firstname</label>
    <div class="col-sm-10">
      <input required
        type="text"
        class="form-control"
        id="Name"
        name="firstname"
        placeholder="Firstname"
      />
    </div>
  </div>

  <div class="mb-3 row">
    <label for="Name" class="col-sm-2 col-form-label">Lastname</label>
    <div class="col-sm-10">
      <input required
        type="text"
        class="form-control"
        id="Name"
        name="lastname"
        placeholder="Lastname"
      />
    </div>
  </div>


  <div class="mb-3 row">
    <label for="Name" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input required
        type="text"
        class="form-control"
        id="Name"
        name="email"
        placeholder="Email"
      />
    </div>
  </div>

  <div class="mb-3 row">
    <label for="Name" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input required
        type="password"
        class="form-control"
        id="Name"
        name="password"
        placeholder="Password"
      />
    </div>
  </div>
  

  <div class="d-flex">
    <div style="margin-left: -10px;" class="p-2">Position</div>
    <div style="margin-left: 140px;" class="p-2">
  <div class="col">
    <input required
      class="form-check-input"
      type="radio"
      name="position"
      id="exampleRadios1"
      value="Manager"
      
    />
    <label class="form-check-label" for="exampleRadios1"> Manager </label>
  </div>
  <div class="col">
    <input required
      class="form-check-input"
      type="radio"
      name="position"
      id="exampleRadios2"
      value="Software Developer"
    />
    <label class="form-check-label" for="exampleRadios2">
      Software Developer
    </label>
  </div>
  <div class="col">
    <input required
      class="form-check-input"
      type="radio"
      name="position"
      id="exampleRadios3"
      value="Quality Assurance" 
    />
    <label class="form-check-label" for="exampleRadios3">
      Quality Assurance
    </label>
  </div>
</div>
</div>

<br>
  <div class="mb-3 row">
    <label for="Type" class="col-sm-2 col-form-label">Type</label>
    <div class="col-sm-10">
        <select required type="boolean" id="Type" name="type" >
            <option value="">Choose your choice</option>
            <option value="full time">full time</option>
            <option value="part time">part time</option>
          </select>
      
    </div>
  </div>

  <br>
  <button type="submit" class="btn btn-primary">Save</button>

  <a class="btn btn-warning" href="/users">Back</a>
</form>

<%- include('../partials/footer') %>
